    </div>
    
    <div class="row">
      <!-- Estatística 1 -->
      <div class="col-md-4 mb-4">
        <div class="stat-card animate-on-scroll">
          <div id="stat-complaints" class="stat-number" data-target="10000">0</div>
          <div class="stat-label">Reclamações cadastradas</div>
        </div>
      </div>
      
